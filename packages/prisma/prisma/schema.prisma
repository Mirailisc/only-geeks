generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String  @id @default(uuid())
  email             String  @unique
  username          String  @unique
  firstName         String?
  lastName          String?
  password          String?
  bio               String?
  picture           String?
  location          String?
  organization      String?
  type              String  @default("local")

  isAdmin           Boolean @default(false)
  isActive          Boolean @default(true)   // for admin deactivation
  deactivatedReason String?

  education         Education[]
  blog              Blog[]
  preference        Preference?
  projects          Project[]
  achievements      Achievement[]

  reportsMade       Report[] @relation("ReportsByUser")
  reportsToMe       Report[] @relation("ReportsAgainstUser")
  adminDecisions    ModerationDecision[]
  restrictions      UserRestriction[]
  auditLogs         AdminAuditLog[]

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([email])
}

model Education {
  id           String    @id @default(uuid())
  userId       String
  school       String
  degree       String
  fieldOfStudy String?
  startDate    DateTime?
  endDate      DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  User User @relation(fields: [userId], references: [id])
}

model Project {
  id          String    @id @default(uuid())
  userId      String
  title       String
  description String?
  link        String?
  photos      String[]  @default([])
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  User        User      @relation(fields: [userId], references: [id])
  reports     Report[]  @relation("ReportsAgainstProject")
}

model Achievement {
  id          String    @id @default(uuid())
  userId      String
  title       String
  description String?
  issuer      String?
  date        DateTime?
  photos      String[]  @default([])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  User User @relation(fields: [userId], references: [id])
}

model Preference {
  id              String   @id @default(uuid())
  userId          String   @unique
  currentTheme    Theme    @default(LIGHT)
  isPublicProfile Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Blog {
  id          String   @id @default(uuid())
  userId      String
  slug        String
  title       String
  content     String?
  description String?
  thumbnail   String?
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  User User @relation(fields: [userId], references: [id])
  reports Report[] @relation("ReportsAgainstBlog")

  @@unique([userId, slug])
  @@index([title])
}

enum Theme {
  LIGHT
  DARK
  SYSTEM
}

// ==========================
//  REPORT (Unified)
// ==========================
model Report {
  id              String   @id @default(uuid())
  reporterId      String
  targetType      ReportTarget
  targetUserId    String?
  targetBlogId    String?
  targetProjectId String?
  category        ReportCategory
  reason          String
  status          ReportStatus @default(PENDING)
  adminNote       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  reporter        User      @relation("ReportsByUser", fields: [reporterId], references: [id])
  targetUser      User?     @relation("ReportsAgainstUser", fields: [targetUserId], references: [id])
  targetBlog      Blog?     @relation("ReportsAgainstBlog", fields: [targetBlogId], references: [id])
  targetProject   Project?  @relation("ReportsAgainstProject", fields: [targetProjectId], references: [id])

  decision      ModerationDecision?
}

enum ReportTarget {
  USER
  BLOG
  PROJECT
}

enum ReportStatus {
  PENDING
  UNDER_REVIEW
  RESOLVED
  REJECTED
}

enum ReportCategory {
  PLAGIARISM
  VIOLENT_CONTENT
  INAPPROPRIATE_CONTENT
  MALWARE
  INTELLECTUAL_PROPERTY_VIOLATION
  MISINFORMATION
  UNSAFE_FEATURES
  DATA_MISUSE
  SPAM
  HARASSMENT
  IMPERSONATION
  INAPPROPRIATE_BEHAVIOR
  SCAM
  HATE_SPEECH
  PRIVACY_VIOLATION
  SEXUAL_HARASSMENT
  THREATS
  OTHER
}

// ==========================
//  MODERATION DECISION
// ==========================
model ModerationDecision {
  id          String   @id @default(uuid())
  adminId     String
  reportId    String   @unique
  action      ModerationAction
  note        String?
  createdAt   DateTime @default(now())

  admin   User   @relation(fields: [adminId], references: [id])
  report  Report @relation(fields: [reportId], references: [id])
}

enum ModerationAction {
  NONE          // no action taken
  REQUEST_EDIT  // admin requests user to edit
  UNPUBLISH     // admin unpublishes blog/project
  DEACTIVATE    // admin deactivates user
  DELETE        // admin deletes content
}

// ==========================
//  USER RESTRICTION
// ==========================
model UserRestriction {
  id        String   @id @default(uuid())
  userId    String
  type      RestrictionType
  reason    String?
  expiresAt DateTime?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

enum RestrictionType {
  TEMP_BAN       // cannot login
  NO_POSTING     // cannot create blogs/projects
  NO_COMMENT     // cannot comment/interact (future use)
}

// ==========================
//  ADMIN AUDIT LOG
// ==========================
model AdminAuditLog {
  id          String   @id @default(uuid())
  adminId     String
  actionType  String
  targetType  String
  targetId    String?
  details     String?
  createdAt   DateTime @default(now())

  admin User @relation(fields: [adminId], references: [id])
}